<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.renren.shopping.model">
	<!-- 动态插入和更新，当值为null的时候不加入到sql语句中 -->
	<class name="UserEmail" table="user_email" dynamic-insert="true">
		<id name="userId" column="user_id">
			<generator class="assigned" />
		</id>
		<property name="email" type="string" column="email" not-null="true"
			unique="true" />
		<!-- update_time默认是当前时间戳 -->
		<property name="update_time" type="timestamp" />
	</class>
</hibernate-mapping>