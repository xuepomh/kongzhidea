<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.renren.shopping.model">
	<!-- 动态插入和更新，当值为null的时候不加入到sql语句中 -->
	<class name="Comment" table="comments" dynamic-insert="true">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="userId" column="user_id" type="int" not-null="true" />
		<property name="travelId" column="travel_id" type="long"
			not-null="true" />
		<property name="content" type="string" length="1024"
			not-null="true" />
		<property name="score" type="int" />
		<property name="toId" column="to_id" type="long" />
		<property name="update_time" type="timestamp" />
	</class>
</hibernate-mapping>