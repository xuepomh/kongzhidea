<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.renren.shopping.model">
	<!-- 动态插入和更新，当值为null的时候不加入到sql语句中 -->
	<class name="SearchHotWord" table="search_hot_word"
		dynamic-insert="true">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="word" type="string" length="64" not-null="true"
			unique="true" />
		<property name="searchNum" type="int" column="search_num" />
		<property name="update_time" type="timestamp" />
	</class>
</hibernate-mapping>