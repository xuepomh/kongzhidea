<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.renren.shopping.model">
	<!-- 动态插入和更新，当值为null的时候不加入到sql语句中 -->
	<class name="GoodPhoto" table="good_photos" dynamic-insert="true">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="goodId" column="good_id" not-null="true"
			type="long" />
		<property name="description" type="string" length="256" />
		<property name="photo_url" type="string" length="1024" />
		<property name="main_url" type="string" length="1024"/>
		<property name="head_url" type="string" length="1024"/>
		<property name="tiny_url" type="string" length="1024"/>
		<property name="update_time" type="timestamp" />
	</class>
</hibernate-mapping>